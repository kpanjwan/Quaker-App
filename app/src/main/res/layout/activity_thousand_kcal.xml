<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.ttm.quaker.thousand_kcal"
    android:background="@drawable/sack_background">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ddm_image1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ddm_first_item"
                android:adjustViewBounds="true"/>
            <TextView
                android:id="@+id/thousand_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ddm_image1"
                android:layout_marginTop="4pt"
                android:text="@string/ddm_thousang_kcal_title"
                    android:textColor="#000000"
                    android:textSize="9pt"/>
            <TextView
                android:id="@+id/thousand_recipe"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/thousand_title"
                android:layout_marginTop="4pt"
                android:text="@string/ddm_thousand_kcal"
                    android:textColor="#000000"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
