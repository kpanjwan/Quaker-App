<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ttm.quaker.UploadRecipe"
    android:background="@drawable/sack_background">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="fill_parent"
                android:layout_height="29.3pt"
                android:text="Choose Image"
                android:textAllCaps="false"
                android:textColor="#fefefe"
                android:id="@+id/ChooseImage"
                android:background="#e90909"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/NewRecipe"
                android:layout_below="@+id/ChooseImage"/>
            <TextView
                android:id="@+id/recipe_title_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Recipe Name:"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_below="@+id/NewRecipe"
                android:layout_marginTop="3pt"/>
            <EditText
                android:id="@+id/recipe_title"
                android:layout_width="fill_parent"
                android:layout_height="10pt"
                android:layout_below="@+id/recipe_title_label"
                android:background="#fefefe"
                android:layout_marginTop="3pt"/>
            <TextView
                android:id="@+id/ingridients_input_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recipe_title"
                android:text="@string/Ingridients"
                android:textColor="#000000"
                android:layout_marginTop="3pt"/>
            <EditText
                android:id="@+id/ingridients_input"
                android:layout_width="fill_parent"
                android:layout_height="70pt"
                android:layout_below="@+id/ingridients_input_label"
                android:layout_marginTop="3pt"
                android:background="#fefefe" />
            <TextView
                android:id="@+id/step_input_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ingridients_input"
                android:layout_marginTop="3pt"
                android:text="@string/Steps"
                android:textColor="#000000" />
            <EditText
                android:id="@+id/step_input"
                android:layout_width="fill_parent"
                android:layout_height="70pt"
                android:layout_below="@+id/step_input_label"
                android:layout_marginTop="4pt"
                android:background="#fefefe"/>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="29.3pt"
                android:text="Upload Recipe"
                android:textAllCaps="false"
                android:textColor="#fefefe"
                android:id="@+id/upload"
                android:layout_below="@id/step_input"
                android:layout_marginTop="3pt"
                android:background="#e90909"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
