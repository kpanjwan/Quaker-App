<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.ttm.quaker.Contest"
    android:background="@drawable/sack_background">
    <ImageView
        android:id="@+id/peanut"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddRecipe"
        android:src="@drawable/oats_cream"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="29.5pt"
        android:id="@+id/AddRecipe"
        android:text="Add Recipe"
            android:textAllCaps="false"
            android:textSize="8pt"
        android:background="#e90909"
        android:textColor="#fefefe"
        android:layout_above="@+id/ViewRecipe"
        android:layout_marginTop="3pt"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="29.5pt"
        android:id="@+id/ViewRecipe"
        android:text="View Recipe"
            android:textSize="8pt"
            android:textAllCaps="false"
        android:background="#e90909"
        android:textColor="#fefefe"
        android:layout_marginTop="3pt"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
