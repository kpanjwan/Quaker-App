<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ttm.quaker.DailyRecipe"
    android:background="@drawable/sack_background">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pancakes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"/>
                <TextView
                    android:id="@+id/dtitle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3pt"
                    android:layout_below="@+id/pancakes"
                    android:textSize="10pt"
                        android:textColor="#000000"/>
                <TextView
                    android:id="@+id/Ingridients"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dtitle"
                    android:text="@string/Ingridients"
                    android:textColor="#000000"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Ingridients_List"
                    android:layout_below="@+id/Ingridients"
                    android:layout_marginTop="3pt"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/Steps"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Ingridients_List"
                    android:text="@string/Steps"
                        android:textColor="#000000"
                    android:layout_marginTop="3pt" />
                <TextView
                    android:id="@+id/Steps_List"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_below="@+id/Steps"
                    android:layout_marginTop="3pt"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
