<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingBottom="@dimen/activity_vertical_margin"
     tools:context=".LoginScreen"
    android:background="@drawable/sack_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50pt"
        android:id="@+id/top_right"
        android:src="@drawable/quaker_topright"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="60pt"
        android:id="@+id/firstpage"
        android:src="@drawable/all_oats"
        android:layout_above="@+id/logo" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="69pt"
        android:id="@+id/logo"
        android:src="@drawable/quaker_logo"
        android:layout_above="@+id/Email"/>
    <EditText
        android:id="@+id/Email"
        android:hint="Username (email)"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="19.5pt"
        android:inputType="textEmailAddress"
        android:singleLine="true"
        android:maxLines="1"
        android:background="#fefefe"
        android:elegantTextHeight="true"
        android:layout_above="@+id/password"
        android:layout_margin="5pt"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="19.5pt"
        android:hint="Password"
        android:id="@+id/password"
            android:textAlignment="center"
        android:background="#ffffff"
        android:elegantTextHeight="true"
        android:layout_above="@+id/login"
        android:inputType="textPassword"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="5pt"
        android:layout_marginRight="5pt"
        android:layout_marginTop="5pt"
        android:layout_marginBottom="5pt"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="26pt"
        android:id="@+id/login"
        android:textColorHint="#ffffff"
        android:hint="Login or Sign Up"
        android:background="#e90909"
        android:layout_marginTop="2.5pt"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_alignStart="@+id/password"
        android:layout_alignEnd="@+id/password"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
